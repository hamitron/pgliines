
<%= render 'milestone_modal' %>

<div class="row">
	<div class="col-md-1">
		<div class="ratio" style="background-image:url(<%=@user.image%>)" alt="responsive img"></div>
		</div>
		<h3> <%= @user.name %>
			<% if @user.age != nil %>, <%= @user.age %> years old,
			<%end%>
			<% if @user.specialty != nil %> specializes in <%= @user.specialty %>.
			<% end %>
		</h3>
</div>


	<div class="row">
	
		<% @twiines.each do |p| %>
			<div class="col-md-3">
				<div class="ratio" style="background-color:white" alt="responsive img">
				</div>

					<div class="carousel-caption">

						<div class="carousel-caption-inner">
							<h3><%= link_to p.name, user_twiines_path(p.id) %></h3>
							Milestones Count: <%= p.milestones.count %>
							
							
							
							

						</div>

					</div>
			</div>
		<% end %>



		<% if current_user == @user %>
		<div class="col-md-3">
			
				<%= render 'twiine_form' %>

		</div>
		<% end %>

	</div>
</div>