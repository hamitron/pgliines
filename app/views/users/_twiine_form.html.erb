
	<% if current_user == @user %>
		
		<div class="col-md-4">
				
			
					<div class="tab-content">
	  					<div class="tab-pane active" id="plus"> 
	  													
	     					 	<a href="#new" role="tab" data-toggle="tab"><div class="new-milestone"></div></a>

	 					</div>
		        
						<div class="tab-pane" id="new">
			             	<%= form_for @twiine do |s| %>
			             	<div class="row">
			                	
			                	<div class="col-md-4">
									What Are You Working On?
								</div>
								<div class="col-md-6">
									<%= s.text_field :name, class: "form-control",  placeholder: "Name Your Twiine" %> 
					            </div>    
					        </div>
					        <div class="row">
					        	<div class="col-md-4">
					    			What Kind of Project Is This?
								</div>
					        	<div class="col-md-6">            
									<%= s.text_field :category, class: "form-control", placeholder: "Categorize Your Twiine"  %> 
								</div>	
					            
									
							</div>
							<div class="row">
								<div class="col-md-4">
									An Image to Get Started
								</div>
								<div class="col-md-6">
					                <%= s.file_field :image, class: "form-control"%>
					            </div>
				
							</div>
							<div class="row">
								<div class="col-md-6">
									All Set?
								</div>
							
								<div class="col-md-3">
					    			<%= s.submit "Create Twiine", class: "btn btn-default" %>
								</div>
							</div>
			               	<% end %>
			        	</div>
		       				
							
						</div>
					</div>
				
	

	</div>
	<% end %>

        